{% extends 'base.html.twig' %}

{% block title %}Edit User{% endblock %}

{% block body %}
    <h1>Edit User</h1>

    {{ form_start(form) }}

    {{ form_row(form.name) }}
    {{ form_row(form.email) }}

    <div class="mb-3">
        {{ form_label(form.password.first, 'Password', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.password.first, {'attr': {'class': 'form-control'}, 'id': 'user_edit_password_first'}) }}
        <small class="text-warning fst-italic">Note:: Leave blank if you do not want to change the password.</small>
    </div>
    {{ form_row(form.password.second) }}
    {{ form_row(form.roles) }}
    <button class="btn">{{ button_label|default('Update') }}</button>


    {{ form_end(form) }}

    <a href="{{ path('app_user_index') }}">back to list</a>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
